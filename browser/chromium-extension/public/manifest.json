{
  "manifest_version": 3,
  "name": "Persona Autofill",
  "description": "Preview extension for switching Persona identities, autofilling credentials, and initiating SSH workflows.",
  "version": "0.1.0",
  "action": {
    "default_title": "Persona",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "nativeMessaging",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
